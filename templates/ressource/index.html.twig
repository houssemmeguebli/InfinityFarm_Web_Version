{% extends 'base.html.twig' %}

{% block title %}Ressource index{% endblock %}

{% block contenu %}
    <div class="container-fluid page-header">
        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
                <h3 class="display-4 text-white text-uppercase">Ressources</h3>
                <div class="d-inline-flex text-white">
                    <p class="m-0 text-uppercase"><a class="text-white" href="">Home</a></p>
                    <i class="fa fa-angle-double-right pt-1 px-3"></i>
                    <p class="m-0 text-uppercase">Ressources</p>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <div class="container mt-4">
        <h1 class="m-0 text-center mb-4" style="font-size: 24px;">Liste des ressources</h1>
        <br>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>Type de ressource</th>
                    <th>Espèce de ressource</th>
                    <th>Quantité de ressource</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ressource in ressources %}
                    <tr>
                        <td>{{ ressource.typeres }}</td>
                        <td>{{ ressource.speciesres }}</td>
                        <td>{{ ressource.quantiteres }}</td>
                        <td>
                            <a href="{{ path('app_ressource_show', {'idres': ressource.idres}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('app_ressource_edit', {'idres': ressource.idres}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('app_ressource_delete', {'idres': ressource.idres}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this resource?')"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <br>
        <div class="text-center">
            <a href="{{ path('app_ressource_new') }}" class="btn btn-success"><i class="fas fa-plus"></i>Ajouter ressource</a>
        </div>
    </div>
{% endblock %}
